<!-- Modal -->
<div class="modal fade" id="modalUsuario" tabindex="-1" role="dialog" aria-labelledby="modalUsuarioTitle" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="modalUsuarioTitle">Usuario - Operador</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<table class="table">
					<thead class="thead-dark">
						<tr>
							<th>
								<span class="font-size: 48px;">
									<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
								</span>
							</th>
							<th>Nombre Completo</th>
							<th>Area</th>
						</tr>
					</thead>
					<tbody>
						@if (Model.Lista_Usuarios != null)
						{
							@foreach (var item in Model.Lista_Usuarios)
							{
								<tr>
									<td>
										<button class="user_in_list" onclick="cargar_Usuario('@{ @item.Id }', '@Url.Action("GetUsuario", "Tickets")' );">
											<span class="font-size: 48px;">
												<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
											</span>
										</button>
									</td>
									<td>@item.FullName</td>
									<td>@item.Area</td>
								</tr>
							}
						}
					</tbody>
				</table>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary">Save changes</button>
			</div>
		</div>
	</div>
</div>
